<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alliswell.patients">

    <application
        android:name="com.alliswell.common.AllIsWellApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_custom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_custom"
        android:supportsRtl="true"
        android:theme="@style/Theme.AllisWell">
        <activity android:name="com.alliswell.details.ui.journal.AddJournalDetailActivity"></activity>
        <activity
            android:name="com.alliswell.details.DetailsMainActivity"
            android:label="@string/title_activity_details_main" />
        <activity android:name="com.alliswell.situation.AddSituationActivity" />
        <activity android:name=".AddPatientsActivity" />
        <activity
            android:name="com.alliswell.situation.SituationActivity"
            android:label="@string/title_activity_issues"
            android:theme="@style/Theme.AllisWell.NoActionBar">
            <meta-data
                android:name="com.support.PARENT_ACTIVITY"
                android:value=".PatientsActivity" />
        </activity>
        <activity
            android:name=".PatientsActivity"
            android:label="@string/title_activity_patients"
            android:theme="@style/Theme.AllisWell.NoActionBar" />
        <activity
            android:name="com.alliswell.common.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>